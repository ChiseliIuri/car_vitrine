	<!-- Quill CDN -->
	<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
	<script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>

	<script>
		// Global Quill instances (for access in saveProject function)
		var quillEn, quillRo, quillRu;

		// Initialize Quill editors and attach form handler
		(function(){
			quillEn = new Quill('#editor_en', { theme: 'snow' });
			quillRo = new Quill('#editor_ro', { theme: 'snow' });
			quillRu = new Quill('#editor_ru', { theme: 'snow' });

			var form = document.getElementById('projectForm');
			
			// Wait for saveProject function to be defined (loaded from admin.js)
			var attachFormHandler = function() {
				if (typeof saveProject === 'function') {
					form.addEventListener('submit', saveProject);
				} else {
					// Retry in 100ms if saveProject not yet loaded
					setTimeout(attachFormHandler, 100);
				}
			};
			attachFormHandler();
		})();
	</script></div>